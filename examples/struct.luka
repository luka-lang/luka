import "lib/stdio";

struct Person {
    name: u8*,
    age: u8
}

fn main() {
    let mut bob: Person = Person { name: "Bob", age: 14 };

    printf("Person\n\tName: %s\n\tAge: %d\n", bob.name, bob.age);

    bob.age = bob.age + 1;

    printf("Person\n\tName: %s\n\tAge: %d\n", bob.name, bob.age);
}
